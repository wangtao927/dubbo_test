<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd
       ">
    <dubbo:application name="${dubbo.application.name}"/>

    <!-- 使用multicast广播注册中心暴露发现服务地址 -->
    <dubbo:registry address="${dubbo.registry.address}" file="${dubbo.registry.file}"/>
    <!-- dubbo consumer -->
    <dubbo:consumer check="false" timeout="6000" filter="tracerpc"/>
    <dubbo:reference
            id="employeeService"
            interface="com.facishare.open.addressbook.api.EmployeeService"
            version="1.1"
            protocol="dubbo"/>
    <dubbo:reference
            id="sendMessageService"
            interface="com.facishare.open.msg.service.SendMessageService"
            version="1.0"
            protocol="dubbo"
    />
    <dubbo:reference
            id="queryAppAdminService"
            interface="com.facishare.open.app.center.api.service.QueryAppAdminService"
            protocol="dubbo"
            version="1.0">
        <dubbo:method
                name="findAppAdminListByAppId"
                retries="0"/>
    </dubbo:reference>

    <dubbo:reference
            id="circleService"
            interface="com.facishare.open.addressbook.api.CircleService"
            protocol="dubbo"
            version="1.1">
    </dubbo:reference>

    <dubbo:reference
            id="enterpriseService"
            interface="com.facishare.open.addressbook.api.EnterpriseService"
            protocol="dubbo"
            version="1.1">
    </dubbo:reference>
    <dubbo:reference
            version="1.1"
            id="appService"
            interface="com.facishare.open.oauth.service.AppService"
            filter="tracerpc"/>

    <dubbo:reference
            version="1.1"
            id="codeService"
            interface="com.facishare.open.oauth.service.CodeService"
            filter="tracerpc"/>

    <dubbo:reference
            version="1.0"
            id="msgSessionService"
            interface="com.facishare.open.msg.service.MsgSessionService"
            filter="tracerpc"/>

    <dubbo:reference
            version="1.3"
            id="appEaVisibleService"
            interface="com.facishare.open.app.center.api.service.AppEaVisibleService"
            filter="tracerpc"/>

    <dubbo:reference
            version="1.3"
            id="openFsUserAppViewService"
            interface="com.facishare.open.app.center.api.service.OpenFsUserAppViewService"
            filter="tracerpc"/>

    <dubbo:reference
            version="1.0"
            id="objectDataService"
            interface="com.facishare.open.crm.service.ObjectDataService"
            filter="tracerpc"
            timeout="10000"/>

    <dubbo:reference
            version="1.0"
            id="objectDescService"
            interface="com.facishare.open.crm.service.ObjectDescService"
            filter="tracerpc"
            timeout="10000"/>

    <dubbo:reference
            version="1.1"
            id="openUserIdService"
            interface="com.facishare.open.oauth.service.OpenUserIdService"
            filter="tracerpc"/>

    <dubbo:reference id="fsCoreService" interface="com.facishare.uc.api.service.FsCoreService"
                     protocol="dubbo" filter="tracerpc"/>

    <dubbo:reference id="openSessionService" interface="com.facishare.qixin.api.open.OpenSessionService"
                     protocol="dubbo" filter="tracerpc"
    />

</beans>
